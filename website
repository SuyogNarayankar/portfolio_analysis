                        'rgba(54, 162, 235, 0.8)',
                        'rgba(255, 205, 86, 0.8)',
                        'rgba(153, 102, 255, 0.8)'
                    ],
                    borderWidth: 0,
                    cutout: '60%'
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            padding: 20,
                            usePointStyle: true
                        }
                    }
                }
            }
        });
        
        // Return Performance Chart
        const returnCtx = document.getElementById('returnChart').getContext('2d');
        new Chart(returnCtx, {
            type: 'bar',
            data: {
                labels: ['DATAPATTNS', 'HCG', 'MAZDOCK', 'Portfolio Avg'],
                datasets: [{
                    label: 'Returns (%)',
                    data: [18.66, 2.87, 15.24, 10.95],
